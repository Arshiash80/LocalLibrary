extends log_reg_layout

block content
    h1= title
    
    hr
    div(class='container')
    include ./partials/messages.pug
        form(action="", method="post")
            div.form-group
                label(for="user_email") Email adress: #[strong(style="color:red;") *]
                input#user_email.form-control(type="email", name="user_email", placeholder="Email adress", required= true)
            div.form-group
                label(for="user_password") Password: #[strong(style="color:red;") *]
                input#user_password.form-control(type="password", name="user_password", placeholder="password", required= true)

            button.btn.btn-primary(type='submit') Login
        br
        p You don't have an account? go to #[a(href="/users/register")(style="font-weight:700;") Register page.]